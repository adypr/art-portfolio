{
    "extends": [
        "eslint-config-airbnb-base",
        "stylelint"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-debugger": "off",
        "no-console": 0,
        "class-methods-use-this": "off",
        "prettier/prettier": ["error", { "endOfLine":"auto" }],
        "linebreak-style": 0
    }
}
